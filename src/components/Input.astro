---
interface Props {
  autofocus?: boolean;
  required?: boolean;
  id: string;
  type: "text" | "email" | "password" | "date" | "number" | "checkbox";
  name: string;
  placeholder?: string;
  class?: string;
}

const {
  autofocus,
  required,
  id,
  type,
  name,
  placeholder,
  class: className,
} = Astro.props;
---

<input
  autofocus={autofocus}
  required={required}
  id={id}
  type={type}
  name={name}
  placeholder={placeholder}
  class:list={["input", className]}
/>

<style>
  .input {
    margin: 0;
    padding: var(--gap-sm);
    border-radius: var(--border-radius);
    border: var(--border-width) solid var(--color-text-muted);
    font-family: var(--font-family);
    font-size: var(--font-size);
    background-color: var(--background-color);
    color: var(--color-text);
  }
</style>
