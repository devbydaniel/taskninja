---
interface Props {
  title: string;
}

const { title } = Astro.props;
const theme = Astro.cookies.get("theme")?.value || "light";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A nice and clean task manager UI" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={theme === "dark" ? "dark" : ""}>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background: #fff;
    --background-raised: #f0f0f0;
    --background-focus: #d0d0d0;
    --background-clicked: #c0c0c0;
    --border-radius: 0.75rem;
    --border-color: #ccc;
    --border-width: 1px;
    --color-primary: #000;
    --color-primary-light: #4d4d4d;
    --color-primary-lighter: #666;
    --color-primary-foreground: #fff;
    --color-text: #333;
    --color-text-muted: #666;
    --color-warning: #ff0;
    --color-error: #f00;
    --font-family: monospace;
    --font-size-sm: 0.8rem;
    --font-size: 1rem;
    --font-size-lg: 1.2rem;
    --gap-xs: 0.25rem;
    --gap-sm: 0.5rem;
    --gap-md: 1rem;
    --gap-lg: 1.5rem;
    --padding-x: var(--gap-md);
    --padding-y: var(--gap-sm);
  }

  .dark {
    --background: #000;
    --background-raised: #111;
    --background-focus: #333;
    --background-clicked: #444;
    --border-color: #666;
    --color-primary: #fff;
    --color-primary-light: #ccc;
    --color-primary-lighter: #aaa;
    --color-primary-foreground: #000;
    --color-text: #ddd;
    --color-text-muted: #aaa;
    --color-warning: #ff0;
    --color-error: #f00;
  }

  body {
    font-family: monospace;
    background: var(--background);
    color: var(--color-text);
    margin: 0;
    padding: 0;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p,
  ul {
    margin: 0;
    color: var(--color-text);
  }

  hr {
    border: 0;
    border-top: var(--border-width) solid var(--border-color);
    margin: var(--gap-md) 0;
  }

  a {
    color: var(--color-text);
    text-decoration: none;
  }

  label {
    color: var(--color-text);
  }

  input,
  textarea {
    font-family: monospace;
    background: var(--background-raised);
    color: var(--color-text);
  }

  kbd {
    padding: var(--gap-xs) var(--gap-sm);
    border-radius: 50%;
    box-shadow: 0 1px 0 var(--border-width) var(--border-color);
    font-size: var(--font-size-sm);
  }
</style>
